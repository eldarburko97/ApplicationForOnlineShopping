@model IEnumerable<AppBoutiqueKids.Models.Category>



<div class="row">
    <div class="span9 full">
        <table class="table">
            <tr>
                <td>
                    <p>
                        <a asp-controller="Admin" asp-action="AddCategory" class="btn btn-warning">Add Category</a>
                    </p>
                </td>
                <td>
                    <p>
                        <a asp-controller="Admin" asp-action="AdminHomePage" class="btn btn-warning">Back</a>
                    </p>
                </td>
            </tr>
        </table>


        <div class="control-group">

            <table class="table">

                <thead>
                    <tr>
                        <td>Name</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><a asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a asp-controller="Admin" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>
</div>