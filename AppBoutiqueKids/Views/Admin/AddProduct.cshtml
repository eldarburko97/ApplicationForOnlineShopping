@model ProductInputVM

@{
    ViewData["Title"] = "AddProduct";
}

<section class="main-content">
    <div class="row">
        <div class="span5">
            <h4 class="title"><span class="text"><strong>AddProduct</strong> Form</span></h4>
            <form action="/Admin/AddProduct" method="post" enctype="multipart/form-data">

                <fieldset>
                    <div class="control-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="control-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="control-group">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="control-group">
                        <label asp-for="Brands"></label>
                        <select asp-for="BrandId" class="form-control" asp-items="@(Model.Brands)">
                            <option value="">-- Select Brand --</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="control-group">
                        <label asp-for="Categories"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(Model.Categories)">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>


                    <div class="control-group">
                        <label asp-for="Photo"></label>                     
                        <input asp-for="Photo" />
                    </div>

                    <div class="actions"><input tabindex="9" class="btn btn-warning" type="submit" value="Add">
                    <a asp-controller="Admin" asp-action="ProductList" class="btn btn-warning">Back</a></div>
                </fieldset>


            </form>

        </div>
    </div>
</section>


