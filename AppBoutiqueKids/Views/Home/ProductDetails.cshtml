@model AppBoutiqueKids.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var PhotoPath = "~/images/" + Model.ProductImagePath;
}


    <div class="row">
        <div class="span9 full">
            <div class="row">
                <div class="span4">
                    <a href="themes/images/ladies/1.jpg" class="thumbnail" data-fancybox-group="group1" title="Description 1">
                    <img alt="" src="@PhotoPath"  asp-append-version="true"></a>
                </div>
                <div class="span5">
                    <address>
                        <strong>Brand:</strong> <span>@Model.Brand.Name</span><br>
                        <strong>Category:</strong> <span>@Model.Category.Name</span><br>
                        <strong>Availability:</strong> <span>@(Model.Quantity < 0 ? "Out of stock" : Model.Quantity.ToString())</span><br>
                    </address>
                    <h4><strong>Price: $@Model.Price</strong></h4>
                </div>
                <div class="span5">
    
                    @if (User.IsInRole(Globals.Admin))
                    {
                        <a asp-controller="Admin" asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    }
                    else
                    {
                        <form class="form-inline">
                            <label>Qty:</label>
                            <input type="text" class="span1" placeholder="1">
                            <button class="btn btn-inverse" type="submit">Add to cart</button>
                        </form>
                    }
                </div></div><div class="row">
                <div class="span12">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a href="#home">Description</a></li>
